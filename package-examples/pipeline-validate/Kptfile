apiVersion: kpt.dev/v1alpha2
kind: Kptfile
metadata:
  name: kpt-pipeline-validate-example
pipeline:
  mutators:
    - image: gcr.io/kpt-fn/set-label:unstable
      config:
        apiVersion: fn.kpt.dev/v1alpha1
        kind: SetLabelConfig
        metadata:
          name: label-color-blue
        labels:
          color: blue
  validators:
    - image: gcr.io/kpt-functions/gatekeeper-validate
