apiVersion: kpt.dev/v1alpha1
kind: Kptfile
metadata:
  name: query-engine
packageMetadata:
  shortDescription: sample description
openAPI:
  definitions:
    io.k8s.cli.setters.namespace:
      x-k8s-cli:
        setter:
          name: namespace
          value: yourspace
          required: true
    io.k8s.cli.substitutions.image-tag:
      x-k8s-cli:
        substitution:
          name: image-tag
          pattern: ${image}:${tag}
          values:
          - marker: ${image}
            ref: '#/definitions/io.k8s.cli.setters.image'
          - marker: ${tag}
            ref: '#/definitions/io.k8s.cli.setters.tag'
    io.k8s.cli.setters.image:
      x-k8s-cli:
        setter:
          name: image
          value: query
    io.k8s.cli.setters.tag:
      x-k8s-cli:
        setter:
          name: tag
          value: 1.8.0
    io.k8s.cli.substitutions.proj-namespace:
      x-k8s-cli:
        substitution:
          name: proj-namespace
          pattern: ${gcloud.core.project}-${namespace}
          values:
          - marker: ${gcloud.core.project}
            ref: '#/definitions/io.k8s.cli.setters.gcloud.core.project'
          - marker: ${namespace}
            ref: '#/definitions/io.k8s.cli.setters.namespace'
    io.k8s.cli.setters.gcloud.core.project:
      x-k8s-cli:
        setter:
          name: gcloud.core.project
          value: PROJECT_ID
