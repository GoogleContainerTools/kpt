apiVersion: kpt.dev/v1alpha2
kind: Kptfile
metadata:
  name: consumer

pipeline:
  mutators:
    - image: gcr.io/kpt-fn/apply-setters:unstable
      configMap:
        mysql-user: "foo"
        mysql-database: "bar"
        skip-grant-tables: "true"
        cpu: 100m
        memory: 256Mi
        port: 3306
    - image: gcr.io/kpt-fn/set-namespace:unstable
      config:
        apiVersion: fn.kpt.dev/v1alpha1
        kind: SetNamespaceConfig
        metadata:
          name: my-config
        namespace: color